{{#if this.length}}
<div class="container">
  {{#if this.0.heading}}<h2>{{ this.0.heading }}</h2>{{/if}}
  <div class="list-layout list-layout--row list-layout--4-4-4">
    <div role="list" class="list">
      {{#each this}}
        <div role="listitem" class="list__item">
          <div class="stack stack--detail card card--clickable">
            {{#if image}}
              <div class="stack__image image--decorative">
                {{{ image }}}
              </div>
            {{/if}}
            <div class="stack__content card-body">
              {{#if type}}
                <div class="stack__info">
                  {{~{ type }~}}
                </div>
              {{/if}}
              {{#if date}}
                <div class="stack__date">
                  {{{ date }}}
                </div>
              {{/if}}
              {{#if title}}
                <h3 class="stack__title card-title">
                  {{{ title }}}
                </h3>
              {{/if}}
              {{#if body}}
                <div class="stack__summary">
                  {{~{ body }~}}
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
{{/if}}
