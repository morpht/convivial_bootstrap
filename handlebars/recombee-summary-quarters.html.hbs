<div class="container cp cp--standard">
  <h2>Recommended</h2>
  <div class="roam-recombee list-layout list-layout--row list-layout--3-3-3-3">
    <div class="list">
      {{#each recomms}}
        <div class="list__item">
          <div class="summary">
            <div class="summary__content">
              <h3 class="summary__title">
                <a href="{{values.url}}">
                  {{values.title}}
                </a>
              </h3>
              <div class="summary__summary">
                {{values.summary}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
